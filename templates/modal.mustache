{{!
    @template tiny_edusharing/modal

    Modal to insert edu-sharing content within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "elementid": "exampleId"
    }
}}

{{< core/modal }}

    {{$title}}
        {{#str}} modaltitle, tiny_edusharing {{/str}}
    {{/title}}

    {{$body}}
        <form class="mform">

            <div class="mt-2 mb-4">{{#str}} instructions, tiny_edusharing{{/str}}</div>


            <div class="mb-4">
                <label for="{{elementid}}-{{uniqid}}-filepath">
                    {{#str}} openRepo, tiny_edusharing{{/str}}
                </label>

                <div class="input-group input-append w-100">
                    <button class="btn btn-primary" type="button" data-target="edusharing">
                    {{#str}} browserepository, tiny_edusharing{{/str}}</button>

                    <input id="edusharing_node" name="edusharing_node" type="hidden" value=""/>
                </div>


            </div>
        </form>

        <div id="edusharing-content">

        </div>
    {{/body}}

    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel, moodle {{/str}}</button>
        <button type="button" class="btn btn-primary" data-action="save">{{#str}} insert, tiny_edusharing{{/str}}</button>
    {{/footer}}
{{/ core/modal }}
